<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="10" alignment="CENTER" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.byterace.LoginController" style="-fx-padding: 20;">
    <Label text="Login Form" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
    <TextField fx:id="usernameField" promptText="Username"/>
    <PasswordField fx:id="passwordField" promptText="Password"/>

    <Button fx:id="loginButton" text="Login" onAction="#handleLogin"/>

    <Label fx:id="messageLabel" />
</VBox>