<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="10" alignment="CENTER" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.byterace.SignupController" style="-fx-padding: 20;">
  <Label text="Signup Form" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
  <TextField fx:id="usernameField" promptText="Username"/>
  <TextField fx:id="emailField" promptText="Email"/>
  <PasswordField fx:id="passwordField" promptText="Password"/>

  <Button fx:id="signupButton" text="Sign Up" onAction="#handleSignup"/>

  <Label fx:id="messageLabel" />

  <!-- New button for navigating to the login page -->
  <Button text="Already Registered? Try Login" onAction="#handleLoginRedirect" style="-fx-font-size: 12px;"/>
</VBox>